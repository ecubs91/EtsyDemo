<div class="centre">
  <h2>Student Page</h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Tutor</th>
    <th class="center">Subject</th>
    <th class="center">Duration</th>
    <th class="center">Status</th>
    <th class="center">Review</th>


  </tr>
   <!-- using the tutor_id from tutorial_reqeust table, find user_id to find user first and last names -->
  <!--
    @tutor = Tutor.find(tutorial_request.tutor_id)
    @user = User.find(tutor.user_id) 
 -->

  <% @tutorial_requests.each do |tutorial_request| %>
    <tr>
      
      <td class="center"><%= tutorial_request.subject %></td>
      <td class="center"><%= tutorial_request.duration %></td>
      <td class="center"><%= tutorial_request.created_at.strftime("%B %-d, %Y") %></td>   
      <td class="center">
        <!-- the status has to change depending on time period written in tutorial request form -->
        in process<br><!-- if tutor's status is 'I'm available' and request is made -->
        complete <!-- student marks the tutorial request as complete -->
      </td>
      <td class="center">
        <br>
        write a review<br> <!-- write a review function becomes active if status is complete, direct to new_tutor_review_path where the tutor ID matches otherwise, review field is left blank-->
      </td>
     


    </tr>
  <% end %>
</table>

