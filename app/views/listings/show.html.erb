<div class="row">
	<div class="col-md-6">
		<div class="thumbnail">
		<%= image_tag @listing.image.url %>	
		</div>
	</div>	
	<div class="col-md-6">
		<h3><%= @listing.user.name %></h3>
		<p><%= @listing.university %></p>
		<p><%= @listing.degree_subject %></p>
		<p><%= @listing.graduation_year %></p>
		<p><%= @listing.teaching_subject %></p>				
		<p><%= @listing.location %></p>
		<p><%= @listing.tutorial_type %></p>
		<p><%= @listing.about_myself %></p>
		<p><%= @listing.tutoring_approach %></p>
		<p><%= @listing.teaching_experience %></p>		
		<p><%= @listing.extracurricular_interests %></p>
		<p><%= number_to_currency(@listing.price) %></p>
		<p><%= @listing.description %></p>

	</div>
</div>

<% if current_user == @listing.user %>
	<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
<% end %>	
<%= link_to 'Back', listings_path, class: "btn btn-link" %>
