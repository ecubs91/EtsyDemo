<div class="row">
	

	<div class="col-md-2">
		<div class="thumbnail">	
			<a href="/listings/<%= @listing.id %>">
				<div class="image-photo" style="background-image: url('<%= @listing.image.url %>'); width: 150px; background-size: 100%; height: 150px;">
				</div>
			</a>
		</div>
	</div>	
	<div class="col-md-8">
		<h3><%= @listing.user.name %></h3>
		<p>University: <%= "#{@listing.university}" %> &nbsp;|&nbsp; Degree Subject: <%= "#{@listing.degree_subject}" %></p>
		<p>Graduation Year: <%= "#{@listing.graduation_year}" %> &nbsp;|&nbsp; Location: <%= "#{@listing.location}" %></p>
		<p><b>Teaching Subject:</b> <%= "#{@listing.teaching_subject}" %></p>				
		<p>Tutorial Type: <%= "#{@listing.tutorial_type}" %></p>
	</div>	
</div>

<div class="row">	
	<div class="col-md-8">
		<p><h3>About Myself</h3><%= "#{@listing.about_myself}" %></p>
		<p><h3>Tutoring Approach</h3><%= "#{@listing.tutoring_approach}" %></p>
		<p><h3>Teaching Experience</h3><<%= "#{@listing.teaching_experience}" %></p>		
		<p><h3>Extracurricular Interests</h3><%= "#{@listing.extracurricular_interests}" %></p>
		<br>
		<div class="centre">
			<%= link_to "Request this tutor", new_listing_tutorial_request_path(@listing), class: "btn btn-primary" %>	
		</div>
	</div>
</div>		
	
<%= link_to "Write a Review", new_listing_review_path(@listing), class: "btn btn-primary" %>

<% if @reviews.blank? %>
	<h3>No reviews yet. Be the first to write one!</h3>
<% else %>
	<% @reviews.each do |review| %>
		<p><%= review.rating %></p>
		<p><%= review.comment %></p>
	<% end %>
<% end %>

<% if current_user == @listing.user %>
	<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
<% end %>	
<%= link_to 'Back', listings_path, class: "btn btn-link" %>

