<div class="jumbotron">
  <h1>Discover your <br>potential</h1>
  <h2>Bridging quality tutor with <br>  talented students</h2>
</div>
<div class="centre">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
            <%= link_to image_tag(listing.image.url), listing %>
            <div class="caption">
            <h3><%= listing.user.name %></h3>
            <p><%= "University: #{listing.university}" %></p>
            <p><%= "Degree Subject: #{listing.degree_subject}" %></p>  
            <p><%= "Graduation Year: #{listing.graduation_year}" %></p>
            <p><%= "Location: #{listing.location}" %></p>          
            <% if (user_signed_in?) && (current_user == listing.user) %>
              <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>            
              <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %> 
            <% end %>  
          </div>
        </div> 
      </div> 
    <% end %>
  </div>
</div>
  
<br>

<% if user_signed_in? %> 
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>